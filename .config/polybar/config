[colors]
;background = ${xrdb:color0:#222}
;background = #222
background = #000
;background-alt = #444
background-alt = #222
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
;primary = #ffb52a
primary = #0000ff
secondary = #e60053
alert = #bd2c40

[bar/top]
monitor = ${env:MONITOR:DVI-D-0}
include-file = $HOME/.config/polybar/config.d/top.ini

[bar/bottom]
monitor = ${env:MONITOR:DVI-D-0}
include-file = $HOME/.config/polybar/config.d/bottom.ini

[bar/top2]
monitor = ${env:MONITOR:HDMI-0}
include-file = $HOME/.config/polybar/config.d/top.ini

[bar/bottom2]
monitor = ${env:MONITOR:HDMI-0}
include-file = $HOME/.config/polybar/config.d/bottom.ini

[module/xwindow]
include-file = $HOME/.config/polybar/config.d/xwindow.ini

[module/xkeyboard]
include-file = $HOME/.config/polybar/config.d/xkeyboard.ini

[module/filesystem]
include-file = $HOME/.config/polybar/config.d/filesystem.ini

[module/bspwm]
include-file = $HOME/.config/polybar/config.d/bspwm.ini

[module/i3]
include-file = $HOME/.config/polybar/config.d/i3.ini

[module/mpd]
include-file = $HOME/.config/polybar/config.d/mpd.ini

[module/xbacklight]
include-file = $HOME/.config/polybar/config.d/xbacklight.ini

[module/backlight-acpi]
include-file = $HOME/.config/polybar/config.d/backlight-acpi.ini

[module/cpu]
include-file = $HOME/.config/polybar/config.d/cpu.ini

[module/memory]
include-file = $HOME/.config/polybar/config.d/memory.ini

[module/wlan]
include-file = $HOME/.config/polybar/config.d/wlan.ini

[module/eth]
include-file = $HOME/.config/polybar/config.d/eth.ini

[module/date]
include-file = $HOME/.config/polybar/config.d/date.ini

[module/volume]
include-file = $HOME/.config/polybar/config.d/volume.ini

[module/battery]
include-file = $HOME/.config/polybar/config.d/battery.ini

[module/temperature]
include-file = $HOME/.config/polybar/config.d/temperature.ini

[module/powermenu]
include-file = $HOME/.config/polybar/config.d/powermenu.ini

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

