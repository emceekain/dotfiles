[colors]
include-file = $HOME/.config/polybar/colors.ini

[bar/top]
monitor = ${env:MONITOR:}
include-file = $HOME/.config/polybar/config.d/top.ini

[bar/bottom]
monitor = ${env:MONITOR:}
include-file = $HOME/.config/polybar/config.d/bottom.ini

